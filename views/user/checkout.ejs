<%- include('partials/header'); -%>
    <!-- section start -->
    <section class="section-b-space">
        <div class="container">
            <div class="checkout-page">
                <div class="checkout-form">
                    <form>
                        <div class="row">
                            <div class="col-lg-6 col-sm-12 col-xs-12">
                                <div class="checkout-title">
                                    <h3>Billing Details</h3>
                                </div>
                                <div class="row check-out">
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Name</div>
                                        <input type="text" name="field-name" value="<%= cart.username %>" placeholder="">
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Address</div>
                                        <input type="text" name="field-name" value="<%= cart.address %>" placeholder="">
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Phone</div>
                                        <input type="text" name="field-name" value="<%= cart.number %>" placeholder="">
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <div class="field-label">Email Address</div>
                                        <input type="text" name="field-name" value="<%= cart.email %>" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-sm-12 col-xs-12">
                                <div class="checkout-details">
                                    <div class="order-box">
                                        <div class="title-box">
                                            <div>Product <span>Total</span></div>
                                        </div>
                                        <ul class="qty">
                                            <% cart.cart.forEach(function(Item){ %>
                                            <li><%= Item.title %><span>$ <%= Item.price %></span></li>
                                            <% }) %>
                                        </ul>
                                        <ul class="sub-total">
                                            <li>Subtotal <span class="count">$<%= totalprice %></span></li>
                                            <li>Shipping
                                                <div class="shipping">
                                                    <div class="shopping-option">
                                                        <label for="free-shipping">$20</label>
                                                    </div>
                                                </div>
                                            </li>
                                        </ul>
                                        <ul class="total">
                                            <li>Total <span class="count">$<%= totalprice + 20 %></span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                    <form action="/cart/order-success" method="GET">
                        <div class="form-group radio-option">
                            <input type="radio" name="method" id="payment-2">
                            <label for="payment-2">Cash On Delivery</label>
                        </div>
                        <button type="submit" class="btn-solid btn text-end ml-5">Place Order</button>
                    </form>  
                </div>
            </div>
        </div>
    </section>
    <!-- section end -->
    <%- include('partials/footer'); -%>